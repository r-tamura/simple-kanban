{
  "name": "simple-kanban",
  "version": "0.0.1",
  "description": "Lightweight Todo Application",
  "main": "public/index.js",
  "scripts": {
    "watch": "npm run build -- --watch",
    "start:hot": "node server.js",
    "lint": "eslint --ignore-path .gitignore --format=node_modules/eslint-formatter-pretty src *.js",
    "hot-server": "cross-env NODE_ENV=development node --max_old_space_size=2096 -r babel-register server.js",
    "build-main": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.electron.js --progress --profile --colors",
    "build-renderer": "cross-env NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.production.js --progress --profile --colors",
    "build": "npm run build-main && npm run build-renderer",
    "lint:fix": "npm run lint -- --fix",
    "start": "cross-env NODE_ENV=production electron ./app/",
    "start-hot": "cross-env HOT=1 NODE_ENV=development electron -r babel-register -r babel-polyfill ./src/client/main",
    "dev": "npm run hot-server -- --start-hot",
    "test": "jest --coverage",
    "test:update": "npm test -- -u",
    "test:watch": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/rtamura30/simple-kanban.git"
  },
  "keywords": [
    "Kanban",
    "React",
    "Redux",
    "Babel",
    "Webpack",
    "Sass"
  ],
  "author": "rtamura",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/rtamura30/simple-kanban/issues"
  },
  "homepage": "https://gitlab.com/rtamura30/simple-kanban#README",
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^16.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "cross-env": "^3.1.3",
    "css-loader": "^0.25.0",
    "devtron": "^1.4.0",
    "electron": "^1.4.7",
    "electron-devtools-installer": "^2.0.1",
    "enzyme": "^2.5.1",
    "eslint": "^3.8.0",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-formatter-pretty": "^1.1.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.24.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^16.0.2",
    "json-loader": "^0.5.4",
    "node-sass": "^3.10.1",
    "react-addons-test-utils": "^15.3.2",
    "react-hot-loader": "^1.3.0",
    "react-test-renderer": "^15.3.2",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.1.1",
    "sass-loader": "^4.0.2",
    "spectron": "^3.4.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-combine-loaders": "^2.0.0",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "^2.13.2",
    "webpack-merge": "^0.17.0",
    "webpack-validator": "^2.2.9"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "electron-debug": "^1.1.0",
    "material-ui": "^0.16.4",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0",
    "reselect": "^2.5.4"
  },
  "jest": {
    "moduleDirectories": [
      "src/client",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy"
    }
  }
}
